package exceptionsHandling;

public class Exa1 {

	public static void main(String[] args) 
	{
		
		//Run Time Exception
		
		int a=10;
		int b=0;
		
		
		System.out.println("Hi Ashok");
		
		//How To Handel it
		
		try 
		{
			int c=a/b; //Risky code
		
		    System.out.println(c);  
		
		} 
		catch (ArithmeticException e) 
		{
			System.out.println("we cant divide any no by zero ");
		}
		
		
		
		
	}

}
